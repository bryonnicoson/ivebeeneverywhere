<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bryonnicoson.ivebeeneverywhere.StateDetailActivity">

    <ImageView
        android:id="@+id/detail_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="8dp" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/detail_abbreviation_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abbreviation:" />

            <TextView
                android:id="@+id/detail_area_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="area:" />

            <TextView
                android:id="@+id/detail_population_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="population:" />

            <TextView
                android:id="@+id/detail_capital_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="capital:" />

            <TextView
                android:id="@+id/detail_mostPopulousCity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="most populous city:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_abbreviation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_capital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_mostPopulousCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#e0e0e0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <CheckBox
        android:text=" been there "
        android:textSize="20dp"
        android:id="@+id/been_there"
        android:onClick="beenThere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
